<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean class="org.javacream.util.aspects.aopalliance.TracingAspect"
		id="tracingAspect"></bean>

	<bean class="org.springframework.aop.framework.ProxyFactoryBean"
		>
		<property name="autodetectInterfaces" value="true" />
		<property name="target" ref="serializingBooksService" />
		<property name="interceptorNames">
			<list>
				<value>tracingAspect</value>
			</list>
		</property>

	</bean>
	<bean
		class="org.javacream.books.warehouse.decorators.SerializingBooksService"
		id="serializingBooksService" primary="true">
		<property name="booksService">
			<bean class="org.javacream.books.warehouse.impl.MapBooksService"></bean>
		</property>
	</bean>
</beans>
